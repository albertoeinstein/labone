<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingRight="@dimen/paddingRight"
    android:paddingLeft="@dimen/paddingLeft"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.inputmethodservice.ExtractEditText
        android:id="@+id/username"
        android:layout_toLeftOf="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/user_name"
        android:textColorHint="@color/material_pink_A100"
        android:layout_marginTop="@dimen/layout_marginTop"
        />

    <android.inputmethodservice.ExtractEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:hint="@string/password"
        android:textColorHint="@color/material_pink_A100"
        android:layout_marginTop="@dimen/layout_marginTop"
        />


    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_alignParentRight="true"
        android:text="submit"
        android:background="@color/material_blue_100"
        android:layout_marginTop="@dimen/layout_marginTop"
        />


    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_alignParentRight="true"
        android:text="signup"
        android:background="@color/material_cyan_900"
        android:layout_marginTop="@dimen/layout_marginTop"
        />


</LinearLayout>
